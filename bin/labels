#!/usr/bin/env ruby

require_relative '../config/init'

puts <<~EOF
<html>
<head>
  <style>
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
    }

    .book {
      border: dashed #aaa 1px;

      width: 3in;
      height: 2in;
      position: relative;
    }
    .lcc {
      font-family: "Avenir", "Anonymous Pro";
      font-size: 20px;
      letter-spacing: .1rem;
      text-align: center;

      position: absolute;
      width: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
    }

    .author {
      font-size: 10px;
    }
  </style>
</head>
<body>
<div class='container'>
EOF

Book.where.not(lcc: nil).order(:lcc).each do |book|
  next if !book.lcc

  puts <<~EOF
    <div class='book'>
      <div class='lcc'>#{book.lcc}</div>
      <div class='author'>#{book.author.to_s[0..30]} #{book.title.to_s[0..30]}</div>
    </div>
  EOF
end

puts <<~EOF
</div>
</body>
</html>
EOF
